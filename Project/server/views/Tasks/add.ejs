<%-include ../partials/header.ejs %>
<%-include ../partials/main_nav.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="post" action="/tasks/add">
                <div class="form-group">
                    <label for="titleTextField">Task Title</label>
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Enter the name of the task"
                    name="title" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the brief description of the task"
                    name="description" required></textarea>
                </div>

                <div class="form-group">
                    <label for="dayTextField">Day</label>
                    <input type="text" class="form-control"
                    id="dayTextField"
                    placeholder="Enter the due date (day)"
                    name="day" required>
                </div>

                <div class="form-group">
                    <label for="monthTextField">Month</label>
                    <input type="text" class="form-control"
                    id="monthTextField"
                    placeholder="Enter the due date (Month)"
                    name="month" required>
                </div>
                
                <div class="form-group">
                    <label for="yearTextField">Year</label>
                    <input type="text" class="form-control"
                    id="yearTextField"
                    placeholder="Enter the due date (Year)"
                    name="year" required>
                </div>

                <div class="form-group">
                    <label for="priorityTextField">Priority</label>
                    <input type="text" class="form-control"
                    id="priorityTextField"
                    placeholder="Enter the priority of the task"
                    name="priority" required>
                </div>

                <div class="form-group">
                    <label for="statusTextField">Status</label>
                    <input type="text" class="form-control"
                    id="statusTextField"
                    placeholder="Enter the status of the task"
                    name="status" required>
                </div>
                <br>
                <button class="btn btn-primary" type="submit"> Submit
                </button>
                <a href="/tasks" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
<%-include ../partials/footer.ejs %>